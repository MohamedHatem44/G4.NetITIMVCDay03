@{
    var _Departments = ViewBag.Departments;
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Department Name</th>
            <th scope="col">View</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in _Departments)
        {
            <tr>
                <th scope="col">@item.Id</th>
                <th scope="col">@item.DeptName</th>
                <th scope="col"><a href="~/Department/ViewDetails/@item.Id" class="btn btn-primary">View Details</a></th>
            </tr>
        }
    </tbody>
    <tfoot>
        <a href="~/Department/Create" class="btn btn-primary">Create New</a>
    </tfoot>
</table>