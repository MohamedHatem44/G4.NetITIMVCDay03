@model IEnumerable<Employee>


<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Employee Name</th>
            <th scope="col">Employee Age</th>
            <th scope="col">Employee Salary</th>
            <th scope="col">Department Name</th>
            <th scope="col">View</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="col">@item.Id</th>
                <th scope="col">@item.Name</th>
                <th scope="col">@item.Age</th>
                <th scope="col">@item.Salary</th>
                <th scope="col">@item.Department.DeptName</th>
                <th scope="col"><a href="~/Employee/ViewDetails/@item.Id" class="btn btn-primary">View Details</a></th>
            </tr>
        }
    </tbody>
    <tfoot>
        <a href="~/Employee/Create" class="btn btn-primary">Create New</a>
    </tfoot>
</table>
